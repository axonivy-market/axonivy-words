  },
  "elements" : [ {
      "id" : "f0",
      "type" : "RequestStart",
      "name" : "Document With Filled Placeholder",
      "config" : {
        "signature" : "start"
      },
      "visual" : {
        "at" : { "x" : 96, "y" : 120 }
      },
      "connect" : [
        { "id" : "f2", "to" : "f13" }
      ]
    }, {
      "id" : "f5",
      "type" : "Script",
      "name" : [
        "Get Template from",
        "CMS"
      ],
      "config" : {
        "output" : {
          "code" : [
            "import com.axonivy.utils.axon.ivy.words.demo.ExportFromCms;",
            "",
            "out.templateFile = ExportFromCms.export(\"/Templates/myTemplate\", \"doc\");"
          ]
        }
      },
      "visual" : {
        "at" : { "x" : 464, "y" : 120 }
      },
      "connect" : [
        { "id" : "f6", "to" : "f7", "color" : "default" }
      ]
    }, {
      "id" : "f7",
      "type" : "SubProcessCall",
      "name" : [
        "Create Document",
        "from template"
      ],
      "config" : {
        "processCall" : "GenerateFillingWordsFile:createDocFromTemplate(CompositeObject,String,String,String,List<com.axonivy.utils.axon.ivy.words.service.mergefield.TemplateMergeField>)",
        "call" : {
          "map" : {
            "param.data" : "in.candidate",
            "param.optionalOutputpath" : "new File(\"ivy_DocumentDemo\").getAbsolutePath()",
            "param.templatePath" : "in.templateFile.getAbsolutePath()",
            "param.optionalLetterName" : "\"DocumentFromTemplate\"",
            "param.mergeFields" : "in.mergeFields"
          }
        },
        "output" : {
          "map" : {
            "out" : "in",
            "out.file" : "result.fileOperationMessage"
          },
          "code" : [
            "import com.axonivy.utils.axon.ivy.words.demo.ConvertDocumentPdfFile;",
            "",
            "out.streamedContent = ConvertDocumentPdfFile.convert(out.file.getAbsolutePath(), out.file.getName());"
          ]
        }
      },
      "visual" : {
        "at" : { "x" : 648, "y" : 120 }
      },
      "connect" : [
        { "id" : "f1", "to" : "f8" }
      ]
    }, {
      "id" : "f8",
      "type" : "DialogCall",
      "name" : "Preview and download Document",
      "config" : {
        "dialog" : "com.axonivy.utils.axon.ivy.words.demo.PreviewDocument:start(org.primefaces.model.StreamedContent)",
        "call" : {
          "map" : {
            "param.streamContent" : "in.streamedContent"
          }
        }
      },
      "visual" : {
        "at" : { "x" : 824, "y" : 120 }
      },
      "connect" : [
        { "id" : "f9", "to" : "f3" }
      ]
    }, {
      "id" : "f13",
      "type" : "DialogCall",
      "name" : "Input an object",
      "config" : {
        "dialog" : "com.axonivy.utils.axon.ivy.words.demo.FillingMergeFields:start()",
        "output" : {
          "map" : {
            "out" : "in",
            "out.candidate" : "result.candidate"
          },
          "code" : [
            "import com.axonivy.utils.axon.ivy.words.service.mergefield.TemplateMergeField;",
            "in.mergeFields.add(new TemplateMergeField(\"age\", out.candidate.age));",
            "in.mergeFields.add(new TemplateMergeField(\"house\", out.candidate.house));",
            "in.mergeFields.add(new TemplateMergeField(\"name\", out.candidate.name));",
            "in.mergeFields.add(new TemplateMergeField(\"position\", out.candidate.position));",
            "in.mergeFields.add(new TemplateMergeField(\"school\", out.candidate.school));"
          ]
        }
      },
      "visual" : {
        "at" : { "x" : 288, "y" : 120 }
      },
      "connect" : [
        { "id" : "f4", "to" : "f5" }
      ]
    }, {
